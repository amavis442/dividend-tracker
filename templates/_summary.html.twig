<div class="container">
	<div class="card mb-2">
		<div class="card-header">
			<h3>
				{{ 'Summary'|trans }}
			</h3>
		</div>
		<div class="card-body">
			<ul class="list-group  list-group-horizontal">
				<li class="list-group-item">{{ 'Holdings'|trans }}:
					<span class="badge badge-primary">{{ numPosition }}</span>
				</li>
				<li class="list-group-item">{{ 'Total invested'|trans }}:
					<span class="badge badge-primary">
						&euro;
						{{ totalInvested|format_number({fraction_digit: 2}) }}
					</span>
				</li>
				<li class="list-group-item">{{ 'Total dividend'|trans }}:
					<span class="badge badge-primary">
						&euro;
						{{ totalDividend|format_number({fraction_digit: 2}) }}
					</span>
				</li>
			</ul>
		</div>
	</div>
</div>
