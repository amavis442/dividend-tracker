{% extends 'base.html.twig' %}
{% block title %}Account{% endblock %}
{% block body %}
    <div class="w-full flex flex-col">
        <div class="flex flex-col md:container mx-auto px-4">
            <div class="flex flex-col border border-gray-300 rounded-lg mb-2 mt-2 p-2">
                <div class="w-1/2 mx-auto border rounded-lg shadow-white bg-white px-3 py-2 ">
                    <div id="alerts" class="mb-4 mt-4">
                        {% for notice in app.flashes('notice') %}
                            <twig:Alert variant="danger">
                                {{ notice|trans }}
                            </twig:Alert>
                        {% endfor %}
                    </div>
                    <div class="px-3 py-2 w-full">
                        <twig:Head>
                            {{ 'Account'|trans }}
                        </twig:Head>
                    </div>
                    {{ form_start(accountForm, { 'attr': {'autocomplete': 'off','data-turbo-frame' : '_top'} }) }}
                        {{ form_row(accountForm.email) }}
                        {{ form_row(accountForm.plainPassword) }}
                        <twig:Button type="submit">{{ 'Update'|trans }}</twig:Button>
                    {{ form_end(accountForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
