{% extends 'base.html.twig' %}

{% block title %}
  Industry
{% endblock %}

{% block body %}
<div class="flex flex-col relative overflow-x-auto">

  <section id="header" class="px-3 py-2">
    <twig:Head:H1>
        {{ 'Industry'|trans }}
    </twig:Head:H1>
  </section>

  <section id="alerts">
    {% for notice in app.flashes('notice') %}
      <twig:Alert:Danger>{{ notice|trans }}</twig:Alert:Danger>
    {% endfor %}
  </section>

<section id="main" class="relative overflow-x-auto border rounded-lg shadow-white bg-white px-3 py-2 ">
  <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-400 dark:bg-gray-700 dark:text-gray-400 ">
      <tr>
        <th scope="col" class="px-6 py-3 rounded-l-lg">Id</th>
        <th scope="col" class="px-6 py-3">Label</th>
        <th scope="col" class="px-6 py-3">Target asset allocation(%)</th>
        <th scope="col" class="px-6 py-3 rounded-r-lg">actions</th>
      </tr>
    </thead>
    <tbody>
      {% for branch in pager %}
        <tr class="{% if loop.index % 2 %} bg-white dark:bg-gray-900 {% else %} bg-gray-50 dark:bg-gray-800{% endif %} border-b dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600">
          <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"> {{ branch.id }}</th>
          <td class="px-6 py-4"><span class="text-wrap">{{ branch.label }}<span></td>
          <td class="px-6 py-4">{{ branch.assetAllocation|format_number({ fraction_digit: 2 }) }}%</td>
          <td class="px-6 py-4">

            <div class="inline-flex rounded-md shadow-sm" role="group">
              <span data-controller="tooltip">
                <a href="{{ path('branch_show', { id: branch.id }) }}" data-tooltip-target="element"  data-action="mouseenter->tooltip#show mouseleave->tooltip#hide" class="px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-s-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-blue-500 dark:focus:text-white">
                  <i class="fas fa-book-open"></i>
                </a>
                <div id="tooltip" role="tooltip" data-tooltip-target="tooltip">
                  {{ 'show branch: %branch%'|trans({'%branch%': branch.label}) }}
                  <div id="arrow" data-tooltip-target="tooltipArrow"></div>
                </div>
              </span>
              <span data-controller="tooltip">
                <a href="{{ path('branch_edit', { id: branch.id }) }}" data-tooltip-target="element"  data-action="mouseenter->tooltip#show mouseleave->tooltip#hide" class="px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-e-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-blue-500 dark:focus:text-white">
                  <i class="far fa-edit"></i>
                </a>
                <div id="tooltip" role="tooltip" data-tooltip-target="tooltip">
                  {{ 'Edit branch: %branch%'|trans({'%branch%': branch.label}) }}
                  <div id="arrow" data-tooltip-target="tooltipArrow"></div>
                </div>
              </span>
            </div>

          </td>
        </tr>
      {% else %}
        <tr colspan="4" class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
          <td  class="px-6 py-4">no records found</td>
        </tr>
      {% endfor %}
      <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
        <td colspan="2" class="px-6 py-4"></td>
        <td colspan="2" class="px-6 py-4">{{ (sumAssetAllocation / 100)|format_number({ fraction_digit: 2 }) }}%</td>
      </tr>
    </tbody>
  </table>

  <div class="mt-2">
    {{ pagerfanta(pager) }}
  </div>
</section>

<section id="footer" class="pr-3 py-2 mt-2">
  <twig:Link:Default href="{{ path('branch_new') }}"><i class="fas fa-plus"></i></twig:Link:Default>
</section>
</div>
{% endblock %}
