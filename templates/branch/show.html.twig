{% extends 'base.html.twig' %}

{% block title %}Industry
{% endblock %}

{% block body %}
    <h1>Industry</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ branch.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ branch.label }}</td>
            </tr>
            <tr>
                <th>Target asset allocation</th>
                <td>{{ (branch.assetAllocation/100)|format_number({fraction_digit: 2}) }}%</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('branch_index') }}" class="btn btn-primary">
        <i class="fas fa-angle-double-left"></i>
        back to list</a>
    |
    <a href="{{ path('branch_edit', {'id': branch.id}) }}" class="btn btn-primary">
        <i class="far fa-edit"></i>
    </a>
    <hr/>
    {{ include('branch/_delete_form.html.twig') }}
{% endblock %}
