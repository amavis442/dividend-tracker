<div class="d-flex justify-content-center">
    {{ form_start(form, {'attr':{'class':'border p-2 rounded' }}) }}
        <div class="row">
            <div class="col-auto">{{ form_row(form.ticker) }}</div>
        </div>
        <div class="row">
            <div class="col-auto">{{ form_row(form.dividend_type) }}</div>
        </div>
        <div class="row">
            <div class="col-auto">{{ form_row(form.ex_dividend_date) }}</div>
        </div>
        <div class="row">
            <div class="col-auto">{{ form_row(form.payment_date) }}</div>
        </div>
        <div class="row">
            <div class="col-auto">
                {{ form_label(form.cash_amount) }}
                <div class="input-group mb-3">
                    <div class="input-group-prepend">{{ form_widget(form.currency) }}</div>
                    {{ form_widget(form.cash_amount) }}
                </div>
            </div>
        </div>
        <div class="mt-2">
            <twig:Button type="submit">
                <i class="far fa-save"></i>
            </twig:Button>
        </div>
    {{ form_end(form) }}
</div>
