{% extends 'base.html.twig' %}

{% block title %}Calendar{% endblock %}

{% block body %}
    <h1>Calendar</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Ticker</th>
                <td>{{ calendar.ticker.fullname }}</td>
            </tr>
            <tr>
                <th>{{ 'Type'|trans }}</th>
                <td>{{ (calendar.dividend_type ?? 'Regular')|trans }}</td>
            </tr>            
            <tr>
                <th>{{ 'Ex-dividend date'|trans }}</th>
                <td>{{ calendar.exDividendDate ? calendar.exDividendDate|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>{{ 'Payment date'|trans }}</th>
                <td>{{ calendar.paymentDate ? calendar.paymentDate|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>{{ 'Cash amount'|trans }}</th>
                <td>{{ (calendar.currency ? calendar.currency.sign : '$')|raw }}{{ (calendar.cashAmount)|format_number({fraction_digit: 2}) }}</td>
            </tr>
            <tr>
                <th>{{ 'Source'|trans }}</th>
                <td>{{ (calendar.source ?? 'manual')|trans }}</td>
            </tr>
            <tr>
                <th>{{ 'Description'|trans }}</th>
                <td>{{ calendar.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('calendar_index') }}" class="btn btn-primary"><i class="fas fa-angle-double-left"></i> {{ 'back to list'|trans }}</a> |

    <a href="{{ path('calendar_edit', {'id': calendar.id}) }}" class="btn btn-primary"><i class="far fa-edit"></i></a>
    <hr/>
    {{ include('calendar/_delete_form.html.twig') }}
{% endblock %}
