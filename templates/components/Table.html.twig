<table {{ attributes.defaults({class: 'w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400'}) }}>
    {% if hasHeader %}
    <thead {{ attributes.defaults({class: 'text-xs text-gray-700 uppercase bg-gray-400 dark:bg-gray-700 dark:text-gray-400'}) }} >
        <tr {{ attributes.defaults({class: 'odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600'}) }} >
            {% for head in header %}
                <th scope="col" {{ attributes.defaults({class: 'px-6 py-3'}) }}>
                    {{ head }}
                </th>
            {% endfor %}
        </tr>
    </thead>
    {% endif %}

    {% block content %}{% endblock %}
