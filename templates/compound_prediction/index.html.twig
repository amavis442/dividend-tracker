{% extends 'base.html.twig' %}

{% block title %}CompoundPrediction
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	{{ include('compound_prediction/_form.html.twig') }}
	<table class="table">
		<thead>
			<tr>
				<th>{{ 'Quator'|trans }}</th>
				<th>{{ 'Dividend growth rate'|trans }}</th>
				<th>{{ 'Share price'|trans }}</th>
				<th>{{ 'Number of Shares'|trans }}</th>
				<th>{{ 'Dividend'|trans }}</th>
				<th>{{ 'Net dividend'|trans }}</th>
				<th>{{ 'New shares'|trans }}</th>
				<th>{{ 'Dividend from new shares'|trans }}</th>
				<th>{{ 'Received dividends'|trans }}</th>
			</tr>
		</thead>
		<tbody>
			{% set rowcount = 1 %}
			{% set oddrow = false %}
			{% for item in data %}
				{% if oddrow and rowcount < payoutFrequency + 1 %}
					{% set oddrow = false %}
				{% endif %}
				{% if rowcount > payoutFrequency  %}
					{% set oddrow = true %}
				{% endif %}
				{% if rowcount > 2 * payoutFrequency - 1 %}
					{% set rowcount = 0 %}
				{% endif %}

				<tr {% if oddrow %} class="table-success" {% endif %}>
					<td>{{ item.quator }}</td>
					<td>{{ item.dividendGrowth|format_number({fraction_digit: 3}) }}%</td>
					<td>{{ item.shareprice|format_number({fraction_digit: 3}) }}</td>
					<td>{{ item.amount }}</td>
					<td>{{ item.dividend }}</td>
					<td>{{ item.net_dividend|format_number({fraction_digit: 3}) }}</td>
					<td>{{ item.new_amount }}</td>
					<td>{{ item.extra_dividend|format_number({fraction_digit: 3}) }}</td>
					<td>{{ item.received_dividend|format_number({fraction_digit: 3}) }}</td>
				</tr>
				{% set rowcount = rowcount + 1 %}
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
