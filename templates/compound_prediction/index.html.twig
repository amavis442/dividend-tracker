{% extends 'base.html.twig' %}

{% block title %}CompoundPrediction{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{{ include('compound_prediction/_form.html.twig') }}
<table class="table">
    <thead>
        <tr>
            <th>Quator</th>
            <th>Start amount</th>
            <th>Dividend</th>
            <th>Net dividend</th>
            <th>New shares</th>
            <th>Dividend from new shares</th>
        </tr>
    </thead>
    <tbody>
    {% for item in data %}
    <tr>
    <td>{{ item.quator }}</td>
    <td>{{ item.amount }}</td>
    <td>${{ item.dividend }}</td>
    <td>&euro;{{ item.net_dividend|format_number({fraction_digit: 3}) }}</td>
    <td>{{ item.new_amount }}</td>
    <td>&euro;{{ item.extra_dividend|format_number({fraction_digit: 3}) }}</td>
    
    </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
