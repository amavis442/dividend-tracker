{% extends 'base.html.twig' %}

{% block title %}{{ 'Currency'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'Currency'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ currency.id }}</td>
            </tr>
            <tr>
                <th>{{ 'Symbol'|trans }}</th>
                <td>{{ currency.symbol }}</td>
            </tr>
            <tr>
                <th>{{ 'Description'|trans }}</th>
                <td>{{ currency.description }}</td>
            </tr>
            <tr>
                <th>{{ 'Sign'|trans }}</th>
                <td>{{ currency.sign }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('currency_index') }}" class="btn btn-secondary"><i class="fas fa-angle-double-left"></i> {{ 'back to list'|trans }}</a>

    <a href="{{ path('currency_edit', {'id': currency.id}) }}" class="btn btn-primary" title="{{ 'edit'|trans }}"><i class="far fa-edit"></i></a>

    {{ include('currency/_delete_form.html.twig') }}
{% endblock %}
