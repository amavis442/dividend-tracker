{% extends 'base.html.twig' %}

{% block title %}Currency{% endblock %}

{% block body %}
    <h1>Currency</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ currency.id }}</td>
            </tr>
            <tr>
                <th>Symbol</th>
                <td>{{ currency.symbol }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ currency.description }}</td>
            </tr>
            <tr>
                <th>Sign</th>
                <td>{{ currency.sign }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('currency_index') }}" class="btn btn-secondary"><i class="fas fa-angle-double-left"></i> back to list</a>

    <a href="{{ path('currency_edit', {'id': currency.id}) }}" class="btn btn-secondary" title="edit"><i class="far fa-edit"></i></a>

    {{ include('currency/_delete_form.html.twig') }}
{% endblock %}
