{% extends 'base.html.twig' %}
{% block title %}{{ 'Currency'|trans }}{% endblock %}
{% block body %}
    <div class="w-full flex flex-col">
        <div class="flex flex-col md:container mx-auto px-4">
            <div class="flex flex-col border border-gray-300 rounded-lg mb-2 mt-2 p-2">
                <div class="w-1/2 mx-auto border rounded-lg shadow-white bg-white px-3 py-2 ">
                    <div id="alerts">
                        {% for notice in app.flashes('notice') %}
                            <twig:Alert variant="danger">
                                {{ notice|trans }}
                            </twig:Alert>
                        {% endfor %}
                    </div>
                    <div class="px-3 py-2 w-full mb-4">
                        <twig:Head>
                            {{ 'Currency'|trans }}
                        </twig:Head>
                    </div>
                    <twig:Table:Table class="border border-gray-200">
                        <tbody>
                            <twig:Table:Tr>
                                <twig:Table:ThRow>
                                    Id
                                </twig:Table:ThRow>
                                <twig:Table:Td>
                                    {{ currency.id }}
                                </twig:Table:Td>
                            </twig:Table:Tr>
                            <twig:Table:Tr>
                                <twig:Table:ThRow>
                                    {{ 'Symbol'|trans }}
                                </twig:Table:ThRow>
                                <twig:Table:Td>
                                    {{ currency.symbol }}
                                </twig:Table:Td>
                            </twig:Table:Tr>
                            <twig:Table:Tr>
                                <twig:Table:ThRow>
                                    {{ 'Description'|trans }}
                                </twig:Table:ThRow>
                                <twig:Table:Td>
                                    {{ currency.description }}
                                </twig:Table:Td>
                            </twig:Table:Tr>
                            <twig:Table:Tr>
                                <twig:Table:ThRow>
                                    {{ 'Sign'|trans }}
                                </twig:Table:ThRow>
                                <twig:Table:Td>
                                    {{ currency.sign }}
                                </twig:Table:Td>
                            </twig:Table:Tr>
                        </tbody>
                    </twig:Table:Table>
                    <div class="w-full pr-3 py-2 mt-2">
                        <div class="inline-flex rounded-md shadow-sm" role="group">
                            <a href="{{ path("currency_index") }}"
                               class="px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-s-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-blue-500 dark:focus:text-white">
                                <i class="fas fa-angle-double-left"></i>
                                {{ 'back to list'|trans }}
                            </a>
                            <a href="{{ path('currency_edit', {'id': currency.id}) }}"
                               class="px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-blue-500 dark:focus:text-white">
                                <i class="far fa-edit"></i>
                            </a>
                            {{ include("currency/_delete_form.html.twig") }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
