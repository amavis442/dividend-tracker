{% extends 'base.html.twig' %}
{% block title %}Dividend Tracker!{% endblock %}
{% block body %}
    <div class="flex flex-col items-center mb-6 mt-6 bg-white shadow-md rounded-lg p-6">
        <div style="width:900px;height:600px">
            {{ render_chart(chart, {
                        'data-controller': 'chartjs-add-euro-sign'
                        }) }}
        </div>

        <div style="width:900px;height:600px">
            {{ render_chart(chartYield, {
                        'data-controller': 'chartjs-add-procent-sign'
                        }) }}
        </div>
        <div style="width:900px;height:600px">
            {{ render_chart(chartRealized, {
                        'data-controller': 'chartjs-add-euro-sign'
                        }) }}
        </div>
    </div>
{% endblock %}
