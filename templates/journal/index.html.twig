{% extends 'base.html.twig' %}

{% block title %}Journal index{% endblock %}

{% block body %}
    <h1>Journal index</h1>

    
        {% for journal in journals %}
        <div class="card" style="width: 60rem;">
            <div class="card-header">{{ journal.title }}
            </div>
            <div class="card-body">
                <span class="card-text">{{ journal.content|raw }}
                <hr/>
                <a href="{{ path('journal_show', {'id': journal.id}) }}" class="btn btn-primary">show</a>
                <a href="{{ path('journal_edit', {'id': journal.id}) }}" class="btn btn-secondary">edit</a>
            </div>
            <div class="card-footer text-muted">
                Created: {{ journal.createdAt ? journal.createdAt|date('Y-m-d H:i:s') : '-' }}, 
                Modified: {{ journal.updatedAt ? journal.updatedAt|date('Y-m-d H:i:s') : '-' }}
            </div>
        </div>
    
        {% else %}
                no records found
        {% endfor %}
<br/>
    <a href="{{ path('journal_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
