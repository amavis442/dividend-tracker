{% extends 'base.html.twig' %}

{% block title %}Journal{% endblock %}

{% block body %}
    <h1>Journal</h1>
    <div>
        <a href="{{ path('journal_new') }}" class="btn btn-primary" role="button"><i class="far fa-file"></i> Create new</a>
    </div>
    <br/>    
        {% for journal in journals %}
        <div class="card" style="width: 60rem;">
            <div class="card-header">
                <h3><span class="badge badge-info">{{ journal.createdAt ? journal.createdAt|date('l, d F Y') }}</span> {{ journal.title }}</h3>
            </div>
            <div class="card-body">
                <span class="card-text">{{ journal.content|raw }}
                <hr/>
                <a href="{{ path('journal_show', {'id': journal.id}) }}" class="btn btn-primary">show</a>
                <a href="{{ path('journal_edit', {'id': journal.id}) }}" class="btn btn-secondary">edit</a>
            </div>
            <div class="card-footer text-muted">
                Created: {{ journal.createdAt ? journal.createdAt|date('Y-m-d H:i:s') : '-' }}, 
                Modified: {{ journal.updatedAt ? journal.updatedAt|date('Y-m-d H:i:s') : '-' }}
            </div>
        </div>
        <br/>
        {% else %}
                no records found
        {% endfor %}

        {% include 'paginator.html.twig' %}
        
{% endblock %}
