{% extends 'base.html.twig' %}

{% block title %}{{ 'Journal'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'Journal'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'Title'|trans }}</th>
                <td>{{ journal.title }}</td>
            </tr>
            <tr>
                <th>{{ 'Content'|trans }}</th>
                <td>{{ journal.content|raw }}</td>
            </tr>
            <tr>
                <th>{{ 'Created'|trans }}</th>
                <td>{{ journal.createdAt ? journal.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{{ 'Modified'|trans }}</th>
                <td>{{ journal.updatedAt ? journal.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('journal_index') }}" class="btn btn-primary"><i class="fas fa-angle-double-left"></i> {{ 'back to list'|trans }}</a>

    <a href="{{ path('journal_edit', {'id': journal.id}) }}" class="btn btn-primary"><i class="far fa-edit"></i></a>
    <hr/>
    {{ include('journal/_delete_form.html.twig') }}
{% endblock %}
