{% if maxPages > 1 %}
<nav aria-label="Page navigation">
<ul class="pagination pagination-sm">
    {# `«` arrow  #}
    <li class="page-item {{ thisPage == 1 ? 'disabled' }}">
        <a class="page-link" href="{{ path(routeName, {page: thisPage-1 < 1 ? 1 : thisPage-1}) }}">« Previous</a>
    </li>

    {# Render each page number #}
    {% for i in 1..maxPages %}
    <li class="page-item {{ thisPage == i ? 'active' }}">
        <a class="page-link" href="{{ path(routeName, {page: i}) }}">{{ i }}</a>
    </li>
    {% endfor %}

    {# `»` arrow #}
    <li class="page-item {{ thisPage == maxPages ? 'disabled' }}">
        <a class="page-link" href="{{ path(routeName, {page: thisPage+1 <= maxPages ? thisPage+1 : thisPage}) }}">Next »</a>
    </li>
</ul>
</nav>
{% endif %}