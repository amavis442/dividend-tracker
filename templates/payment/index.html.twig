{% extends 'base.html.twig' %}

{% block title %}Payments
{% endblock %}

{% block body %}
    <h1>Payments</h1>

    <ul class="nav nav-pills">
        <li class="nav-item">
            <a href="{{ path('payment_index', {'interval': 0}) }}" class="nav-link {{ interval == 0? 'active' : ''}}">All</a>
        </li>
        <li class="nav-item">
            <a href="{{ path('payment_index', {'interval': 1}) }}" class="nav-link {{ interval == 1? 'active' : ''}}">Year</a>
        </li>
        <li class="nav-item">
            <a href="{{ path('payment_index', {'interval': 2}) }}" class="nav-link {{ interval == 2? 'active' : ''}}">Month</a>
        </li>
        <li class="nav-item">
            <a href="{{ path('payment_index', {'interval': 3}) }}" class="nav-link {{ interval == 3? 'active' : ''}}">Week</a>
        </li>
        <li class="nav-item">
            <a href="{{ path('payment_index', {'interval': 4}) }}" class="nav-link {{ interval == 4? 'active' : ''}}">Quater</a>
        </li>
    </ul>
    <br/>
    {% include '_search_form.html.twig' %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Broker</th>
                <th>Ticker</th>
                <th>Industry</th>
                <th>Amount</th>
                <th>Buy price</th>
                <th>Pay date</th>
                <th>Dividend($)</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for payment in payments %}
                <tr>
                    <td>{{ payment.id }}</td>
                    <td>{{ payment.position.broker }}</td>
                    <td>{{ payment.position.ticker.fullname }} ({{ payment.position.ticker.ticker }})</td>
                    <td>{{ payment.position.ticker.branch.label }}</td>
                    <td>{{ payment.stocks/100|format_number({fraction_digit: 2}) }}</td>
                    <td>{{ payment.position.currency.sign|raw }}{{ payment.position.price/100 }}</td>
                    <td>{{ payment.payDate ? payment.payDate|date('d-m-Y') : '' }}</td>
                    <td>{{ (payment.currency ? payment.currency.sign : '$')|raw }}{{ (payment.dividend/100)|format_number({fraction_digit: 2}) }}</td>
                    <td>
                        <a href="{{ path('payment_show', {'id': payment.id}) }}" class="btn btn-primary">
                            <i class="fas fa-book-open"></i>
                        </a>
                        <a href="{{ path('payment_edit', {'id': payment.id}) }}" class="btn btn-primary">
                            <i class="far fa-edit"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">no records found</td>
                </tr>
            {% endfor %}
            <tr>
                <td colspan="6"></td>
                <td>
                    <span style="font-weight:bold">Total dividend</span>
                </td>
                <td>&euro; {{ dividends }}</td>
            </tr>
        </tbody>
    </table>
    {% include 'paginator.html.twig' %}
    <a class="btn btn-primary" href="{{ path('payment_new') }}">
        <i class="fas fa-plus"></i>
    </i>
</a>{% endblock %}
