{% extends 'base.html.twig' %}

{% block title %}Payment index{% endblock %}

{% block body %}
    <h1>Payment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Position</th>
                <th>Ex-dividend date</th>
                <th>Record date</th>
                <th>Pay date</th>
                <th>Dividend($)</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td>{{ payment.id }}</td>
                 <td>#{{ payment.position.id }} {{ payment.position.ticker.ticker }} [{{ payment.position.amount }} - ${{ payment.position.price }}] </td>
                <td>{{ payment.exDividendDate ? payment.exDividendDate|date('d-m-Y') : '' }}</td>
                <td>{{ payment.recordDate ? payment.recordDate|date('d-m-Y') : '' }}</td>
                <td>{{ payment.payDate ? payment.payDate|date('d-m-Y') : '' }}</td>
                <td>{{ payment.dividend|format_number({fraction_digit: 2}) }}</td>
                <td>
                    <a href="{{ path('payment_show', {'id': payment.id}) }}">show</a>
                    <a href="{{ path('payment_edit', {'id': payment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('payment_new') }}">Create new</a>
{% endblock %}
