{% extends 'base.html.twig' %}

{% block title %}Payment
{% endblock %}

{% block body %}
<div class="w-full flex flex-col">
	<div class="flex flex-col md:container mx-auto px-4">
		<div class="flex flex-col border border-gray-300 rounded-lg mb-2 mt-2 p-2">
			<div class="mb-4">
				<twig:Head variant="h5">{{ 'Company details'|trans }}</twig:Head>
			</div>

			<div>
				<twig:Table:Table>
					<tbody>
						<twig:Table:Tr>
							<twig:Table:ThRow>{{ 'Ticker'|trans }}</twig:Table:ThRow>
							<td>{{ payment.ticker.fullname }}
								({{ payment.ticker.symbol }})</td>
						</twig:Table:Tr>
						<twig:Table:Tr>
							<twig:Table:ThRow>{{ 'Industry'|trans }}</twig:Table:ThRow>
							<td>{{ payment.ticker.branch.label }}</td>
						</twig:Table:Tr>
						<twig:Table:Tr>
							<twig:Table:ThRow>{{ 'Payment date'|trans }}</twig:Table:ThRow>
							<td>{{ payment.payDate ? payment.payDate|date('l')|trans ~ ', ' ~  payment.payDate|date('d') ~ ' ' ~ payment.payDate|date('F')|trans|lower ~  ' ' ~ payment.payDate|date('Y')  : '' }}
							{{  payment.payDate|date('l d F Y')|trans   }}
							</td>
						</twig:Table:Tr>
						<twig:Table:Tr>
							<twig:Table:ThRow>{{ 'Units'|trans }}</twig:Table:ThRow>
							<td>{{ (payment.amount)|format_number({fraction_digit: 2})  }}</td>
						</twig:Table:Tr>
						<twig:Table:Tr>
							<twig:Table:ThRow>Total dividend</twig:Table:ThRow>
							<td>{{ payment.currency ? payment.currency.sign|raw : '$' }}{{ payment.dividend|format_number({fraction_digit: 2}) }}</td>
						</twig:Table:Tr>
						<twig:Table:Tr>
							<twig:Table:ThRow>Type</twig:Table:ThRow>
							<td>{{ payment.dividendType }}</td>
						</twig:Table:Tr>
					</tbody>
				</twig:Table:Table>

				<section class="w-full pr-3 py-2 mt-2">
					<div class="inline-flex rounded-md shadow-sm" role="group">
						<a href="{{ path('payment_index') }}" class="px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-s-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-blue-500 dark:focus:text-white">
							<i class="fas fa-angle-double-left"></i>
							{{ 'back to list'|trans }}
						</a>

						<a href="{{ path('payment_edit', {'id': payment.id}) }}" class="px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-blue-500 dark:focus:text-white">
							<i class="far fa-edit"></i>
						</a>
						{{ include('payment/_delete_form.html.twig') }}
					</div>
				</section>
			</div>
		</div>
	</div>
</div>
{% endblock %}
