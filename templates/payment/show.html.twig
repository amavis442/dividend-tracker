{% extends 'base.html.twig' %}

{% block title %}Payment{% endblock %}

{% block body %}
    <h1>Payment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Ticker</th>
                <td>{{ payment.ticker.fullname }} ({{ payment.ticker.ticker }})</td>
            </tr>
            <tr>
                <th>Industry</th>
                <td>{{ payment.ticker.branch.label }}</td>
            </tr>
            <tr>
                <th>Payment date</th>
                <td>{{ payment.payDate ? payment.payDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Units</th>
                <td>{{ (payment.amount)|format_number({fraction_digit: 2})  }}</td>
            </tr>
            <tr>
                <th>Total dividend</th>
                <td>{{ payment.currency ? payment.currency.sign|raw : '$' }}{{ payment.dividend|format_number({fraction_digit: 2}) }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ payment.dividendType }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('payment_index') }}" class="btn btn-primary"><i class="fas fa-angle-double-left"></i> back to list</a> | 

    <a href="{{ path('payment_edit', {'id': payment.id}) }}" class="btn btn-primary"><i class="far fa-edit"></i></a>
    <hr/>
    {{ include('payment/_delete_form.html.twig') }}
{% endblock %}
