{% extends 'base.html.twig' %}

{% block title %}Payment
{% endblock %}

{% block body %}
<div class="d-flex justify-content-center mt-4">
	<div class="card mb-2">
		<div class="card-header">
			<h1>Payment</h1>
		</div>
		<div class="card-body">
			<table class="table">
				<tbody>
					<tr>
						<th scope="row">{{ 'Ticker'|trans }}</th>
						<td>{{ payment.ticker.fullname }}
							({{ payment.ticker.symbol }})</td>
					</tr>
					<tr>
						<th scope="row">{{ 'Industry'|trans }}</th>
						<td>{{ payment.ticker.branch.label }}</td>
					</tr>
					<tr>
						<th scope="row">{{ 'Payment date'|trans }}</th>
						<td>{{ payment.payDate ? payment.payDate|date('l')|trans ~ ', ' ~  payment.payDate|date('d') ~ ' ' ~ payment.payDate|date('F')|trans|lower ~  ' ' ~ payment.payDate|date('Y')  : '' }}
						{{  payment.payDate|date('l d F Y')|trans   }}
						</td>
					</tr>
					<tr>
						<th scope="row">{{ 'Units'|trans }}</th>
						<td>{{ (payment.amount)|format_number({fraction_digit: 2})  }}</td>
					</tr>
					<tr>
						<th scope="row">Total dividend</th>
						<td>{{ payment.currency ? payment.currency.sign|raw : '$' }}{{ payment.dividend|format_number({fraction_digit: 2}) }}</td>
					</tr>
					<tr>
						<th scope="row">Type</th>
						<td>{{ payment.dividendType }}</td>
					</tr>
				</tbody>
			</table>

			<div class="d-flex justify-content-end">
				<div class="col"><a href="{{ path('payment_edit', {'id': payment.id}) }}" class="btn btn-primary">
					<i class="far fa-edit"></i>
				</a>
				</div>
				<div class="col">
					{{ include('payment/_delete_form.html.twig') }}
				</div>
			</div>
		</div>
	</div>
</div>

	<a href="{{ path('payment_index') }}" class="btn btn-primary">
		<i class="fas fa-angle-double-left"></i>
		{{ 'back to list'|trans }}</a>
	|


	<hr/>

{% endblock %}
