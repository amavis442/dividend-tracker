{% extends 'base.html.twig' %}

{% block title %}Payment{% endblock %}

{% block body %}
    <h1>Payment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ payment.id }}</td>
            </tr>
            <tr>
                <th>Ex_dividend_date</th>
                <td>{{ payment.exDividendDate ? payment.exDividendDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Record_date</th>
                <td>{{ payment.recordDate ? payment.recordDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Pay_date</th>
                <td>{{ payment.payDate ? payment.payDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Dividend</th>
                <td>{{ payment.dividend }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('payment_index') }}">back to list</a>

    <a href="{{ path('payment_edit', {'id': payment.id}) }}">edit</a>

    {{ include('payment/_delete_form.html.twig') }}
{% endblock %}
