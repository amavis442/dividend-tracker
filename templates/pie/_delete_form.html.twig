<div class="mt-2">
	<form method="post" action="{{ path('pie_delete', {'id': pie.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
		<input type="hidden" name="_method" value="DELETE">
		<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pie.id) }}">
		<button class="btn btn-warning" title="Delete">
			<i class="fas fa-trash"></i>
		</button>
	</form>
</div>
