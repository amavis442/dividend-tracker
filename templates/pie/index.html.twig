{% extends 'base.html.twig' %}

{% block title %}Pie index{% endblock %}

{% block body %}
    <h1>Pie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pie in pies %}
            <tr>
                <td>{{ pie.id }}</td>
                <td>{{ pie.label }}</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                    <a href="{{ path('pie_show', {'id': pie.id}) }}" class="btn btn-primary">{{ 'show'|trans }}</a>
                    <a href="{{ path('pie_edit', {'id': pie.id}) }}" class="btn btn-secondary">{{ 'edit'|trans }}</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pie_new') }}">Create new</a>
{% endblock %}
