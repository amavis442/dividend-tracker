<form method="post" action="{{ path('portfolio_delete_corporate_action', {'corporateAction': corporateaction.id, 'position': position.id }) }}"
    {{ stimulus_controller('delete-confirm',{ title: 'Remove this item?'|trans,
        icon: 'warning',
        confirmButtonText: 'Yes, remove it'|trans,
        cancelButtonText: 'Cancel'|trans,
        }) }}
    {{ stimulus_action('delete-confirm', 'onSubmit') }}
    data-delete-form-target="form"
    data-turbo-frame="portfolio_tab_results">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden"
           name="_token"
           value="{{ csrf_token('delete' ~ corporateaction.id) }}">
    {% if isDisabled %}
        <button type="submit"
                class="px-4 py-2 text-sm font-medium text-gray-900 border border-gray-200 rounded-e-lg bg-gray-300 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:focus:text-white"
                disabled>
            <i class="fas fa-trash"></i>
        </button>
    {% else %}
        <button type="submit"
                class="px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-e-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-blue-500 dark:focus:text-white">
            <i class="fas fa-trash"></i>
        </button>
    {% endif %}
</form>
