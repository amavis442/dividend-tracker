{% extends 'base.html.twig' %}

{% block title %}
{{ 'Edit Position'|trans }}{% endblock %}

{% set is_edit = true %}
{% block body %}
    <div class="tw-flex tw-flex-col tw-w-full tw-items-center tw-justify-center">

        <div class="xl:tw-w-3/8 lg:tw-w-1/2 md:tw-w-2/3 tw-flex tw-flex-col">

            <div class="tw-mb-2 tw-text-left">
                <h1 class="tw-block tw-font-sans tw-text-5xl tw-font-semibold tw-leading-tight tw-tracking-normal tw-text-inherit tw-antialiased">
                    {{ 'Edit Position'|trans }}
                </h1>
            </div>

            {{ include('position/_form.html.twig', {'button_label': 'Update'}) }}

            <div class="tw-w-full tw-bg-slate-400 tw-rounded-lg tw-px-4 tw-py-3 sm:tw-px-6 sm:tw-flex sm:tw-flex-row-reverse">
                <div data-controller="popper" class="sm:tw-flex">
                <a href="{{ path('portfolio_show',  {'id': position.id}) }}"
                  data-popper-target="element" data-action="mouseenter->popper#show mouseleave->popper#hide"
                  class="tw-w-full tw-justify-center tw-rounded-md tw-border
                        tw-border-transparent tw-shadow-sm tw-px-4 tw-py-2 tw-bg-blue-500 tw-font-medium tw-text-white
                        hover:tw-bg-blue-700 focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-offset-2 focus:tw-ring-blue-500
                        sm:tw-ml-3 sm:tw-w-auto sm:tw-text-sm" >
                    <i class="fa-solid fa-angles-left"></i>
                    <div id="tooltip" role="tooltip" data-popper-target="tooltip">
                        {{ 'back to list'|trans }}
                        <div id="arrow" data-popper-target="tooltipArrow"></div>
                    </div>
                </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
