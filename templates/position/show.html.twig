{% extends 'base.html.twig' %}

{% block title %}Position{% endblock %}

{% block body %}
    <h1>Position</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Ticker</th>
                <td>{{ position.ticker.ticker }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ position.ticker.fullname }}</td>
            </tr>
            <tr>
                <th>Industry</th>
                <td>{{ position.ticker.branch.label }}</td>
            </tr>
            <tr>
                <th>Buydate</th>
                <td>{{ position.buyDate|date("d-m-Y") }}</td>
            </tr>
            <tr>
                <th>Units</th>
                <td>{{ (position.amount/100)|format_number({fraction_digit: 2}) }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ position.currency.sign|raw }}{{ (position.price/100)|format_number({fraction_digit: 2}) }}</td>
            </tr>
            <tr>
                <th>Allocation</th>
                <td>{{ position.allocationCurrency.sign|raw }}{{ (position.allocation/100)|format_number({fraction_digit: 2}) }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ position.closed ? 'Closed' : 'Open' }}</td>
            </tr>
            <tr>
                <th>Closedate</th>
                <td>{{ position.closeDate ? position.closeDate|date("d-m-Y") : '' }}</td>
            </tr>
            <tr>
                <th>Close price</th>
                <td>{% if position.closePrice %}{{ position.closedCurrency ? position.closedCurrency.sign|raw : '' }}{{ position.closePrice/100 }}{% endif %}</td>
            </tr>
            <tr>
                <th>Profit / Loss</th>
                <td>{% if position.profit %}${{ position.profit|format_number({fraction_digit: 2}) }}{% endif %}</td>
            </tr>
            <tr>
                <th>Profit / Loss (%)</th>
                <td>{% if position.closePrice %}{{ position.getProfitPercentage|format_number({fraction_digit: 2}) }}%{% endif %}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-primary" href="{{ path('position_edit', {'id': position.id}) }}"><i class="far fa-edit"></i></a> | 

    <a class="btn btn-primary" href="{{ path('position_index') }}"><i class="fas fa-angle-double-left"></i> back to list</a>
    <hr/>
    
{% endblock %}
