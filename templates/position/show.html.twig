{% extends 'base.html.twig' %}

{% block title %}Position{% endblock %}

{% block body %}
    <h1>Position</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ position.id }}</td>
            </tr>
            <tr>
                <th>Ticker</th>
                <td>{{ position.ticker.ticker }}</td>
            </tr>
            <tr>
                <th>Buydate</th>
                <td>{{ position.buyDate|date("d-m-Y") }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ position.amount/100 }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>${{ position.price/100 }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ position.closed ? 'Closed' : 'Open' }}</td>
            </tr>
            <tr>
                <th>Closedate</th>
                <td>{{ position.closeDate|date("d-m-Y") }}</td>
            </tr>
            <tr>
                <th>Close price</th>
                <td>${{ position.closePrice/100 }}</td>
            </tr>
            <tr>
                <th>Profit / Loss</th>
                <td>${{ position.profit|format_number({fraction_digit: 2}) }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-primary" href="{{ path('position_edit', {'id': position.id}) }}">edit</a>
<br/>
<br/>
    <h4>Dividend received</h4>
    <table  class="table">
        <thead>
            <th>Id</th>
            <th>Date</th>
            <th>Dividend</th>
        </thead>
        <tbody>
        {% for payment in position.payments %}
            <td>{{ payment.id }}</td>
            <td>{{ payment.getPayDate|date("d-m-Y")}}</td>
            <td>${{ (payment.getDividend/100)|format_number({fraction_digit: 2}) }}</td>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('position_index') }}">back to list</a>

    
{% endblock %}
