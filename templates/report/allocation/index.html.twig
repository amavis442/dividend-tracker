{% extends 'base.html.twig' %}

{% block title %}Allocation
{% endblock %}

{% block body %}
	<p class="h1">Allocation information</p>

	<div style='width:900px;height:600px' class="col col-xs-12">
		<canvas id="pieChartCanvas"></canvas>
	</div>
	
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script>
		window.chartData = {{ data|json_encode|raw }};
		window.chartLabels = {{ labels|json_encode|raw }};
		window.chartTitle = 'Allocation';
		window.chartSubTitle = 'Allocation per sector';
	</script>
	{{ encore_entry_script_tags('piechart') }}
{% endblock %}
