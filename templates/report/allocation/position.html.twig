{% extends 'base.html.twig' %}

{% block title %}Allocation
{% endblock %}

{% block body %}
	<p class="h1">Allocation information</p>
	{% include '_summary.html.twig' %}
	<br/>
	<br/>

	<div style='width:1200px;height:1200px' class="col col-xs-12">
		<canvas id="pieChartCanvas"
		data-chart-data='{{ data|json_encode|raw }}'
		data-chart-labels='{{ labels|json_encode|raw }}'
		data-chart-title='Allocation'
		data-chart-subtitle='Allocation per position'		
		></canvas>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('piechart') }}
{% endblock %}
