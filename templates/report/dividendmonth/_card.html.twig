<div class="col-sm-3">
    <div class="card">
        <div class="card-header">
            {{ m.dividendMonth }}
        </div>
        <div class="card-body">
            {% for t in m.tickers %}
                {% if t.hasOpenPositions %}
                    <p class="card-text"><a href="{{ path('calendar_new', {'ticker': t.id}) }}"><i class="far fa-calendar-alt"></i> {{ t.ticker }}</a></p>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
