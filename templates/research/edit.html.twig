{% extends 'base.html.twig' %}

{% block title %}Edit Research
{% endblock %}

{% block body %}
	<h1>Edit Research for
		{{ research.ticker.symbol }}</h1>

	{{ include('research/_form.html.twig', {'button_label': 'Update'}) }}
	<br/>
	<a href="{{ path('research_index') }}" class="btn btn-primary">
		<i class="fas fa-angle-double-left"></i>
		back to list</a>
	<a href="{{ path('ticker_show',{'id' : research.ticker.id}) }}" class="btn btn-primary">
		<i class="fas fa-angle-double-left"></i>
		back to ticker</a>
	<hr/>
	{{ include('research/_delete_form.html.twig') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('fileupload') }}
	{{ encore_entry_script_tags('summernote') }}
{% endblock %}
