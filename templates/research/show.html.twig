{% extends 'base.html.twig' %}

{% block title %}Research
{% endblock %}

{% block body %}
    <h1>Research</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ research.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ research.title }}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ research.info }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('research_index') }}" class="btn btn-primary">
        <i class="fas fa-angle-double-left"></i>
        back to list</a>

    <a href="{{ path('research_edit', {'id': research.id}) }}" class="btn btn-primary"> <i class="far fa-edit"></i></a>
    <hr/>
    {{ include('research/_delete_form.html.twig') }}
{% endblock %}
