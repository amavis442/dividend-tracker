{% extends 'base.html.twig' %}
{% block title %}Log in!{% endblock %}
{% block body %}
    <div class="flex container mx-auto justify-center items-center h-screen w-full">
        <!-- Login Form -->
        <div class="lg:p-36 md:p-20 sm:p-15 p-8 border shadow-sm rounded-lg m-4">
            <twig:Head class="mb-4">
                {{ 'Please sign in'|trans }}
            </twig:Head>
            <form method="post">
                {% if error %}
                    <div class="font-regular relative mb-4 block w-full rounded-lg bg-red-500 p-4 text-base leading-5 text-white opacity-100">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                {% if app.user %}
                    <div class="mb-3">
                        {{ 'You are logged in as'|trans }} {{ app.user.username }}, <a href="{{ path("app_logout") }}">{{ 'Logout'|trans }}</a>
                    </div>
                {% endif %}
                <!-- Username Input -->
                <div>
                    <label for="_username"
                           class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Email</label>
                    <input type="email"
                           value="{{ last_username }}"
                           name="_username"
                           id="_username"
                           placeholder="Email"
                           required
                           class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:outline-none focus:outline-1 focus:outline-blue-400/50  hover:bg-gray-100 focus:ring-4 focus:ring-blue-500/75 block w-full p-2.5"
                           autocomplete="off">
                </div>
                <!-- Password Input -->
                <div>
                    <label for="_password"
                           class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                        {{ 'Password'|trans }}
                    </label>
                    <input type="password"
                           id="_password"
                           name="_password"
                           placeholder="{{ 'Password'|trans }}"
                           class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:outline-none focus:outline-1 focus:outline-blue-400/50 hover:bg-gray-100 focus:ring-4 focus:ring-blue-500/75 block w-full p-2.5"
                           autocomplete="off">
                </div>
                <input type="hidden"
                       name="_csrf_token"
                       value="{{ csrf_token("authenticate") }}">
                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html
            #}
                <!-- Remember Me Checkbox -->
                <div class="mb-4 flex items-center">
                    <input type="checkbox"
                           id="_remember_me"
                           name="_remember_me"
                           class="rounded-lg focus:outline-none focus:outline-1 focus:outline-blue-400/50 hover:bg-gray-100 focus:ring-2 focus:ring-blue-500/75">
                    <label for="_remember_me" class="text-gray-600 ml-2">{{'Remember me'|trans}}</label>
                </div>
                <!-- Login Button -->
                <button type="submit"
                        class="bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-md py-2 px-4 w-full">
                    {{ 'Sign in'|trans }}
                </button>
            </form>
        </div>
    </div>
{% endblock %}
