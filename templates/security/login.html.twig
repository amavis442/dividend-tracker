{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="flex justify-center items-center h-screen w-1/2">

    <!-- Login Form -->
    <div class="mx-auto w-full lg:p-36 md:p-20 sm:p-15 p-8 border shadow-sm rounded-lg">

        <h1 class="text-2xl font-semibold mb-4">{{ 'Please sign in'|trans }}</h1>

        <form method="post">
            {% if error %}
                <div class="font-regular relative mb-4 block w-full rounded-lg bg-red-500 p-4 text-base leading-5 text-white opacity-100">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    {{ 'You are logged in as'|trans }} {{ app.user.username }}, <a href="{{ path('app_logout') }}">{{ 'Logout'|trans }}</a>
                </div>
            {% endif %}

            <!-- Username Input -->
            <div class="mb-4">
                <label for="inputEmail" class="block text-gray-600">Email</label>
                <input type="email" alue="{{ last_username }}" name="_username" id="inputEmail" placeholder="Email" required aria-label="Username" aria-describedby="email" class="w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:border-blue-500" autocomplete="off">
            </div>

            <!-- Password Input -->
            <div class="mb-4">
                <label for="inputPassword" class="block text-gray-600">{{ 'Password'|trans }}</label>
                <input type="password" id="inputPassword" name="_password" placeholder="{{ 'Password'|trans }}" required aria-label="Password" aria-describedby="password" class="w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:border-blue-500" autocomplete="off">
            </div>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html
            #}
            <!-- Remember Me Checkbox -->
            <div class="mb-4 flex items-center">
                <input type="checkbox" id="_remember_me" name="_remember_me" class="text-blue-500">
                <label for="remember" class="text-gray-600 ml-2">{{'Remember me'|trans}}</label>
            </div>

            <!-- Login Button -->
            <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-md py-2 px-4 w-full">{{ 'Sign in'|trans }}</button>

        </form>
    </div>
</div>
{% endblock %}
