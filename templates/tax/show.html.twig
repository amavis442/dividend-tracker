{% extends 'base.html.twig' %}

{% block title %}{{ 'Tax'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'Tax'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tax.id }}</td>
            </tr>
            <tr>
                <th>{{ 'TaxRate'|trans }}</th>
                <td>{{ tax.taxRate * 100 }}%</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tax_index') }}" class="btn btn-secondary"><i class="fas fa-angle-double-left"></i> {{ 'back to list'|trans }}</a>

    <a href="{{ path('tax_edit', {'id': tax.id}) }}" class="btn btn-primary"><i class="far fa-edit"></i> {{ 'edit'|trans }}</a>

    {{ include('tax/_delete_form.html.twig') }}
{% endblock %}
