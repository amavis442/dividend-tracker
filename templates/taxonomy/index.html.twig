{% extends 'base.html.twig' %}

{% block title %}
  Taxonomy index
{% endblock %}

{% block body %}
  <h1>Taxonomy index</h1>
  {% for notice in app.flashes('notice') %}
    <br />
    <div class="alert alert-primary" role="alert">{{ notice|trans }}</div>
  {% endfor %}
  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>{{ 'Title'|trans }}</th>
        <th>{{ 'Description'|trans }}</th>
        <th>{{ 'Actions'|trans }}</th>
      </tr>
    </thead>
    <tbody>
      {% for taxonomy in taxonomies %}
        <tr>
          <td>{{ taxonomy.id }}</td>
          <td>{{ taxonomy.title }}</td>
          <td>{{ taxonomy.description }}</td>
          <td>
            <div class="btn-group" role="group" aria-label="Basic example">
              <a href="{{ path('app_taxonomy_show', { id: taxonomy.id }) }}" class="btn btn-primary">{{ 'show'|trans }}</a>
              <a href="{{ path('app_taxonomy_edit', { id: taxonomy.id }) }}" class="btn btn-secondary">{{ 'edit'|trans }}</a>
            </div>
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="4">no records found</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  <a class="btn btn-primary" href="{{ path('app_taxonomy_new') }}" title="Create new"><i class="fas fa-plus"></i></a>
{% endblock %}
