{% extends 'base.html.twig' %}

{% block title %}
	{{ 'Edit Ticker'|trans }}:
	{{ ticker.symbol }}
{% endblock %}

{% block body %}
	<h1>{{ 'Edit Ticker'|trans }}:
		{{ ticker.symbol }}</h1>

	{{ include('ticker/_form.html.twig', { button_label: 'Update' }) }}
	<br/>
	<div data-controller="popper" class="sm:flex">
		<a href="{{ path('ticker_index') }}"
			data-popper-target="element"
			data-action="mouseenter->popper#show mouseleave->popper#hide"
			class="w-full justify-center rounded-md border
                        border-transparent shadow-sm px-4 py-2 bg-blue-500 font-medium text-white
                        hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500
                        sm:ml-3 sm:w-auto sm:text-sm">
			<i class="fas fa-angle-double-left"></i>{{ 'back to list'|trans }}
			<div id="tooltip" role="tooltip" data-popper-target="tooltip">
    	    	{{ 'back to list'|trans }}
        	    <div id="arrow" data-popper-target="tooltipArrow"></div>
        	</div>
		</a>
	</div>

	<hr/>
	{{ include('ticker/_delete_form.html.twig') }}
{% endblock %}
