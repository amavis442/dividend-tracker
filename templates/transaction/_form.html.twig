{{ form_start(form) }}
{{ form_errors(form) }}
<div class="accordion" id="accordionPosition">
	<div class="card">
		<div class="card-header" id="headingOne">
			<h2 class="mb-0">
				Transaction::
				<strong>{{ transaction.position.ticker.fullname}}({{ transaction.position.ticker.ticker}})</strong>
			</h2>
		</div>
		<div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionPosition">
			<div class="card-body">

				<div class="row">
					<div class="col">
						{{ form_row(form.side) }}
					</div>
				</div>
				<div class="row">
					<div class="col">
						{{ form_row(form.transactionDate) }}
					</div>
					<div class="col"></div>
				</div>
				<div class="row">

					<div class="col">
						{{ form_row(form.amount) }}
					</div>
				</div>
				<div class="row">
					<div class="col">
						{{ form_label(form.price) }}
						<div class="input-group mb-3">
							<div class="input-group-prepend">
								{{ form_widget(form.currency) }}
							</div>
							<div class="form-group">
								{{ form_widget(form.price) }}
								{{ form_help(form.price)}}
							</div>
						</div>
					</div>
					<div class="col">
						{{ form_label(form.allocation) }}
						<div class="input-group mb-3">
							<div class="input-group-prepend">
								{{ form_widget(form.allocation_currency) }}
							</div>
							<div class="form-group">
								{{ form_widget(form.allocation) }}
								{{ form_help(form.allocation)}}
							</div>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col">
						{{ form_label(form.exchangerate) }}
						<div class="input-group mb-3">
							<div class="form-group">
								{{ form_widget(form.exchangerate) }}
								{{ form_help(form.exchangerate)}}
							</div>
						</div>
					</div>
					<div class="col">
						{{ form_label(form.pie) }}
						<div class="input-group mb-3">
							<div class="form-group">
								{{ form_widget(form.pie) }}
								{{ form_help(form.pie)}}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<br/>
<button type="submit" class="btn btn-primary">
	<i class="far fa-save"></i>
</button>
{{ form_end(form) }}
