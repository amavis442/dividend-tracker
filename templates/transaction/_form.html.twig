<div class="m-4">
	<div class="card">
		<div class="card-header" id="headingOne">
			<h2 class="mb-0">
				Transaction::
				<strong>{{ transaction.position.ticker.fullname }}({{ transaction.position.ticker.symbol }})</strong>
			</h2>
		</div>
			<div class="card-body">
{{ form_start(form) }}
{{ form_errors(form) }}


				<div class="row">
					<div class="col">{{ form_row(form.side) }}</div>
				</div>
				<div class="row">
					<div class="col">{{ form_row(form.transactionDate) }}</div>
					<div class="col">{{ form_row(form.pie) }}</div>
				</div>
				<div class="row">
					<div class="col">{{ form_row(form.amount) }}</div>
				</div>
				<div class="row">
					<div class="col">
						{{ form_label(form.original_price) }}
						<div class="input-group mb-2">
							<div class="input-group-prepend">{{ form_widget(form.currency_original_price, {'attr': {'class': 'p-10'}}) }}</div>
							<div class="form-group ">{{ form_widget(form.original_price, {'attr': {'class': 'w-50'}}) }}
								{{ form_help(form.original_price) }}</div>
						</div>
					</div>
					<div class="col">
						{{ form_label(form.exchangerate) }}
						<div class="input-group mb-1">
							<div class="form-group">{{ form_widget(form.exchangerate, {'attr': {'class': 'w-50'}}) }}
								{{ form_help(form.exchangerate) }}</div>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col">
						{{ form_label(form.total) }}
						<div class="input-group mb-3">
							<div class="input-group-prepend">{{ form_widget(form.total_currency) }}</div>
							<div class="form-group">{{ form_widget(form.total, {'attr': {'class': 'w-50'}}) }}
								{{ form_help(form.total) }}</div>
						</div>
					</div>
				</div>


				<fieldset class="border p-2">
					<legend class="w-auto p-2">{{ "Fees"|trans }}</legend>
					<div class="row">
						<div class="col">
							{{ form_label(form.transaction_fee) }}
							<div class="input-group mb-3">
								<div class="form-group">{{ form_widget(form.transaction_fee) }}
									{{ form_help(form.transaction_fee) }}</div>
							</div>
						</div>
						<div class="col">
							{{ form_label(form.fx_fee) }}
							<div class="input-group mb-3">
								<div class="form-group">{{ form_widget(form.fx_fee) }}
									{{ form_help(form.fx_fee) }}</div>
							</div>
						</div>
					</div>

					<div class="row">
						<div class="col">
							{{ form_label(form.stampduty) }}
							<div class="input-group mb-3">
								<div class="form-group">{{ form_widget(form.stampduty) }}
									{{ form_help(form.stampduty) }}</div>
							</div>
						</div>
						<div class="col">
							{{ form_label(form.finra_fee) }}
							<div class="input-group mb-3">
								<div class="form-group">{{ form_widget(form.finra_fee) }}
									{{ form_help(form.finra_fee) }}</div>
							</div>
						</div>
					</div>
				</fieldset>

				<div class="d-flex justify-content-end mt-2 mb-2">
					<button type="submit" class="btn btn-primary">
						<i class="far fa-save"></i>
					</button>
				</div>

				{{ form_end(form) }}
			</div>
</div>
<br/>

</div>
